
<div class="col-sm-12 mysection">
	<hr style="width: 100%; color: black; height: 1px; background-color:#D2D2D2; margin-top: 0px;" />
  <h2>Edit Profile</h2>
	<div class="col-sm-8 col-lg-offset-2">
	  
	  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

  		<!-- input -->
  		<div class="col-sm-12">
  		  <div class="field">
          <%= f.label :name , :class => "signTitle"%><br />
          <%= f.text_field :name, autofocus: true, :class => "form-control inputArea", :placeholder => "Enter Your Name" %>
        </div>
  		</div>
  		<!-- end of input -->
  
  		<!-- input -->
  		<div class="col-sm-12">
  		  <div class="field">
          <%= f.label :email  , :class => "signTitle"%><br />
           <%= f.text_field :email, autofocus: true, :class => "form-control inputArea", :placeholder => "Enter Your E-mail" %>
        </div>
  		</div>
  		<!-- end of input -->
      
  		<!-- input -->
  		<div class="col-sm-12">
  		  
  		  <div class="field">
          <%= f.label :password  , :class => "signTitle"%> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, :class => "form-control inputArea", :placeholder => "Enter Your Password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
  		</div>
  		<!-- end of input -->
  
  		<!-- input -->
  		<div class="col-sm-12">
      		<div class="field">
              <%= f.label :password_confirmation , :class => "signTitle"%><br />
              <%= f.password_field :password_confirmation, autocomplete: "off" , :class => "form-control inputArea", :placeholder => "Rewrite Your New Password"%>
            </div>
  		</div>
  		<!-- end of input -->

      <br>
  		<!-- input -->
  		<div class="col-sm-4">
  		  <div class="field">
          <%= f.label :image, :class => "signTitle" %>
          <%= f.file_field :image , :class => "btn btn-default"%>
        </div>
  		</div>
  		
  		<hr class="hrSign">
  		<!-- end of input -->
  
  		<!-- input -->
  		<div class="col-sm-12">
          <div class="field">
            
            <%= f.label :current_password , :class => "signTitle"%> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", :class=>"form-control inputArea", :placeholder => "Enter Your Current Password", :style => "margin-bottom: 10px;" %>
          </div>
  		</div>
  		<!-- end of input -->
  
  		<div class="col-sm-4 col-sm-offset-4">
  		  <div class="actions">
          <%= f.submit "Update" ,  :class => "btn btn-danger"%>
        </div>
  		</div>
  		
  		<hr class="hrSign">
  
		<% end %>
		  
		  <div class="row">
			<div class="col-sm-4 pull-right">
  			<%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class=>"btn btn-danger" %>
  		</div>
  		
  		

      <div class="col-sm-4 ">
  		  <%= link_to "Back", :back, :class=>"btn btn-info " %>
  		</div>
     </div>
	</div>

</div>