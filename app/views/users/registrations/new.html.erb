<div class="col-sm-12 mysection mycontainer">
	<hr style="width: 100%; color: black; height: 1px; background-color:#D2D2D2; margin-top: 0px;" />

    <div class="col-sm-8 col-lg-offset-2">
    <h1 class="title" style="text-size="150%">User Sign up</h1>
    
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
    <div class="field col-sm-12">
      <%= f.label :image, :class=>"signTitle" %>:
    <%= f.file_field :image, :class=>"btn btn-default" %>
  </div>
    
    <div class="field col-sm-12">
    <%= f.label :name, :class=>"signTitle" %><br />
    <%= f.text_field :name, autofocus: true, :placeholder=>"Enter your name", :class=>"form-control inputArea"  %>
  </div>

  <div class="field col-sm-12">
    <%= f.label :email, :class=>"signTitle" %><br />
    <%= f.email_field :email, autofocus: true, :placeholder=>"Enter your email", :class=>"form-control inputArea"  %>
  </div>

  <div class="field col-sm-12">
    <%= f.label :password, :class=>"signTitle" %>
    <% if @minimum_password_length %>
    <em class="signTitle">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder=>"Enter your password", :class=>"form-control inputArea"   %>
  </div>

  <div class="field col-sm-12">
    <%= f.label :password_confirmation, :class=>"signTitle" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder=>"Repeat your password", :class=>"form-control inputArea"   %>
  </div>

   <div class="field col-sm-12">
    <%= f.label :date_of_birth, :class=>"signTitle" %><br />
    <%= f.date_select :date_of_birth %>
  </div>
  
  <div class="actions col-sm-6 col-sm-offset-4">
    <%= f.submit "Sign up" ,:style=>"font-family: 'Lobster'; border-radius: 5px; height:40px; font-size: 125%;"%>
  </div>
<% end %>

    </div>
</div>
